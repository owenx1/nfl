<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Quarterback</th>
    <th>Pf</th>
    <th>Pa</th>
    <th>Home</th>
    <th>Away</th>
	<th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.description %></td>
    <td><%= team.quarterback %></td>
    <td><%= team.pf %></td>
    <td><%= team.pa %></td>
    <td><%= team.home %></td>
    <td><%= team.away %></td>
	<td><%= team.image %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

